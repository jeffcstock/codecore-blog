<% if fav.present? %>
  <%= link_to post_favourite_path(@post, fav), remote: true, method: :delete do %>
    <i class="fa heart heart-selected fa-heart" aria-hidden="true"></i><span id="add-fav"></span>
  <% end %>
<% else %>
  <%= link_to post_favourites_path(@post), remote: true, method: :post do %>
    <i class="fa heart fa-heart-o" aria-hidden="true"></i>
  <% end %>
<% end %>
